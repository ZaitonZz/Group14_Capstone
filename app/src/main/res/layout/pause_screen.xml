<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/settingspln">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="587dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="SETTINGS"
        android:textColor="#FF3E2C1E"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <Button
        android:id="@+id/btn_Exit2"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:layout_marginTop="485dp"
        android:layout_marginBottom="197dp"
        android:background="none"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Exit Game"
        android:textColor="#FF3E2C1E"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Resume"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginTop="236dp"
        android:layout_marginBottom="446dp"
        android:background="none"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Resume"
        android:textColor="#FF3E2C1E"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_settings_ingame"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_marginTop="311dp"
        android:layout_marginBottom="370dp"
        android:background="none"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Settings"
        android:textColor="#FF3E2C1E"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_MainMenu"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="398dp"
        android:layout_marginBottom="283dp"
        android:background="none"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Main Menu"
        android:textColor="#FF3E2C1E"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>