<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/character_selectt">

    <TextView
        android:id="@+id/btn_BACK3"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="668dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="BACK"
        android:textColor="#071B42"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="CHARACTER SELECT"
        android:textColor="#071B42"
        android:textSize="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="127dp"
        android:layout_height="183dp"
        android:layout_marginStart="23dp"
        android:background="none"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintVertical_bias="0.425"
        app:srcCompat="@drawable/character" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="244dp"
        android:layout_height="178dp"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="16dp"
        android:background="none"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/questionmarks" />

</androidx.constraintlayout.widget.ConstraintLayout>